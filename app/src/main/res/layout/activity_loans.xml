<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loansActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="הלוואות"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ממי הלווית "
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:hint="שם מלא"
        android:layout_gravity="right"
        android:id="@+id/name_contact" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="כמה הלווית?"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"

        android:textSize="30sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/loan_price"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:hint="סכום"
        android:inputType="number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="פרטי איש קשר"
        android:textSize="25sp"
        android:background="@drawable/round_button"
        android:layout_marginTop="15dp"
        android:onClick="getContacts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם: "
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:id="@+id/nameContacts"
        android:textSize="25sp"
        android:textColor="@color/black"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:visibility="invisible"
        android:onClick="openDial"
        android:background="@drawable/stroke_button"
        android:id="@+id/callNumber"
        android:textColor="@color/black"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שמירה"
        android:id="@+id/saveBill"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:onClick="saveLoans"
        android:textSize="25sp"/>






</LinearLayout>