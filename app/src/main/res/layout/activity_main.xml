<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/savemoney"

    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ערב טוב דביר"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textStyle="normal|bold"

        android:textColor="@color/black"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="normal|bold"

        android:text="הוצאת החודש - "
        android:id="@+id/month"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Num - "
        android:id="@+id/sumOfExpenses"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/type_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_button"
            android:onClick="yourExpense"
            android:text="הזן הוצאה"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הקש לפירוט"
            android:id="@+id/all_money"

            android:onClick="allDetails"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            />



    </LinearLayout>
</LinearLayout>
